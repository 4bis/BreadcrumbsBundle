{% if wo_breadcrumbs()|length %}
    {%- spaceless -%}
        <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement":
            [
                {% for b in breadcrumbs %}
                    {
                        "@type": "ListItem",
                        "position": {{ loop.index }},
                        "item":
                        {
                            "@id": "{{ b.url }}",
                            "name": "{{- b.text | trans(b.translationParameters, translation_domain, locale) -}}"
                        }
                    }{% if not loop.last %},{% endif %}
                {% endfor %}
            ]
        }
        </script>
    {%- endspaceless -%}
{% endif %}
